<Application x:Class="WpfSplashScreen.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             xmlns:local="clr-namespace:WpfSplashScreen">

    <Application.Resources>
        <system:String x:Key="ApplicationName">Wpf Splash Screen Single Instance Multiple Shells</system:String>

        <Color x:Key="AccentColor">#00215E</Color>

        <SolidColorBrush x:Key="AccentColorBrush" Color="{StaticResource AccentColor}" />
    </Application.Resources>
</Application>